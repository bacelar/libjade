
from Jade require "crypto_stream/xsalsa20/amd64/avx2/xsalsa20.jinc"
require "poly1305.jinc"
from Jade require "crypto_secretbox/xsalsa20poly1305/amd64/ref/xsalsa20_32D.jinc"

require "poly1305_kD.jinc"

inline fn __xsalsa20poly1305_avx2(reg u64 c m mlen nonce key, #msf reg u64 ms) -> reg u64, #msf reg u64
{
  reg u64 r tag ct skey;
  stack u64 c_s mlen_s;
  reg u128 t;
  reg bool b;

  mlen = #protect(mlen, ms);
  b = mlen >= 32;
  if(b)
  {
    ms = #set_msf(b, ms);
    c_s = c;
    mlen_s = mlen;

    ms = __xsalsa20_xor_avx2(c, m, mlen, nonce, key, ms);

    c    = c_s;
    c = #protect(c, ms);
    mlen = mlen_s;
    mlen = #protect(mlen, ms);
    tag  = #LEA(c + 16);
    ct   = #LEA(c + 32);
    mlen = #LEA(mlen - 32);
    skey = c;

    ms = __poly1305_avx2(tag, ct, mlen, skey, ms);

    c = c_s;
    c = #protect(c, ms);
    t = #set0_128();
    (u128)[c + 0] = t;
    r = 0;
  }
  else
  { ms = #set_msf(!b, ms); r = -1; }

  return r, ms;
}


inline fn __xsalsa20poly1305_avx2_open(reg u64 m c clen nonce key, #msf reg u64 ms) -> reg u64, #msf reg u64
{
  reg u64 r tag ct;
  stack u8[32] subkey;
  reg ptr u8[32] subkey_p;
  stack u64 m_s c_s clen_s nonce_s key_s;
  reg u256 t;
  reg bool b1 b2;

  b1 = clen >= 32;
  if(b1)
  {
    ms = #set_msf(b1, ms);
    m_s = m;
    c_s = c;
    clen_s = clen;
    nonce_s = nonce;
    key_s = key;

    subkey_p = subkey;
    subkey_p, ms = __xsalsa20_ref_32(subkey_p, nonce, key, ms);

    c    = c_s;
    c = #protect(c, ms);
    clen = clen_s;
    clen = #protect(clen, ms);
    tag  = #LEA(c + 16);
    ct   = #LEA(c + 32);
    clen = #LEA(clen - 32);

    #declassify r, ms = __poly1305_verify_avx2_k(tag, ct, clen, subkey_p, ms);
    r = #protect(r, ms);

    b2 = r == 0;
    if(b2)
    {
      ms = #set_msf(b2, ms);
      m = m_s;
      c = c_s;
      clen = clen_s;
      nonce = nonce_s;
      nonce = #protect(nonce, ms);
      key = key_s;
      key = #protect(key, ms);

      ms = __xsalsa20_xor_avx2(m, c, clen, nonce, key, ms);

      m = m_s;
      m = #protect(m, ms);
      t = #set0_256();
      (u256)[m + 0] = t;
      r = 0; // this frees 'r' for the xsalsa20_xor_avx2 f. call
    }
    else
    { ms = #set_msf(!b2, ms); r = -1; }
  }
  else
  { ms = #set_msf(!b1, ms); r = -1; }

  return r, ms;
}
